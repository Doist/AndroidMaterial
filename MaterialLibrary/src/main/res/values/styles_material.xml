<resources>

    <style name="TextAppearance.Material" parent="android:TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
        <item name="android:textColorHighlight">?android:attr/textColorHighlight</item>
        <item name="android:textColorLink">?android:attr/textColorLink</item>
        <item name="android:textSize">@dimen/text_size_body_1_material</item>
        <item name="android:fontFamily">@string/font_family_body_1_material</item>
    </style>

    <style name="TextAppearance.Material.Button">
        <item name="android:textSize">@dimen/text_size_button_material</item>
        <item name="android:fontFamily">@string/font_family_button_material</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Material.Widget"/>
    <style name="TextAppearance.Material.Widget.Button" parent="TextAppearance.Material.Button" />

    <!-- Bordered ink button -->
    <style name="Widget.Material.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_material</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">88dip</item>

        <!-- TODO: Turn this back on when we support inset drawable outlines. -->
        <!-- <item name="stateListAnimator">@anim/button_state_list_anim_material</item> -->
    </style>
</resources>
