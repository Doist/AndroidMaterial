<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget">
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <style name="Material" />

    <style name="Material.Light" />

    <style name="Widget.Material" parent="Widget" />

    <style name="TextAppearance.Material.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@string/font_family_button_material</item>
    </style>

    <!-- Bordered ink button -->
    <style name="Widget.Material.Button">
        <item name="android:background">@drawable/btn_default_material</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <!-- TODO: Turn this back on when we support inset drawable outlines. -->
        <!-- <item name="stateListAnimator">@anim/button_state_list_anim_material</item> -->
    </style>

    <!-- Borderless ink button -->
    <style name="Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/btn_borderless_material</item>
        <!--<item name="stateListAnimator">@null</item>-->
    </style>

    <!-- Colored borderless ink button -->
    <style name="Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorAccent</item>
        <!--<item name="stateListAnimator">@anim/disabled_anim_material</item>-->
    </style>

    <style name="Widget.Material.Light.Button.Borderless" parent="Widget.Material.Button.Borderless" />

    <!-- Spinner -->
    <style name="Widget.Material.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background_material</item>
        <item name="android:popupBackground">@drawable/popup_background_material</item>
    </style>

    <style name="Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/spinner_textfield_background_material</item>
    </style>
</resources>
