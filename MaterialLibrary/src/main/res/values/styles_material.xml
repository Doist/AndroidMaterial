<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget">
        <item name="android:textAppearance">?android:textAppearance</item>
    </style>

    <style name="Material" />

    <style name="Material.Light" />

    <style name="Widget.Material" parent="Widget" />

    <style name="TextAppearance.Material.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@string/font_family_button_material</item>
    </style>

    <style name="TextAppearance.Material.Switch" parent="TextAppearance.AppCompat.Medium" />

    <!-- Bordered ink button -->
    <style name="Widget.Material.Button">
        <item name="android:background">@drawable/btn_default_material</item>
        <item name="android:textAppearance">?android:attr/textAppearanceButton</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <!-- TODO: Turn this back on when we support inset drawable outlines. -->
        <!-- <item name="stateListAnimator">@anim/button_state_list_anim_material</item> -->
    </style>

    <!-- Borderless ink button -->
    <style name="Widget.Material.Button.Borderless">
        <item name="android:background">@drawable/btn_borderless_material</item>
        <!--<item name="stateListAnimator">@null</item>-->
    </style>

    <!-- Colored borderless ink button -->
    <style name="Widget.Material.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorAccent</item>
        <!--<item name="stateListAnimator">@anim/disabled_anim_material</item>-->
    </style>

    <style name="Widget.Material.Light.Button.Borderless" parent="Widget.Material.Button.Borderless" />

    <!-- Spinner -->
    <style name="Widget.Material.Spinner" parent="android:Widget.Spinner.DropDown">
        <item name="android:background">@drawable/spinner_background_material</item>
        <item name="android:dropDownSelector">?attr/listChoiceBackgroundIndicator</item>
        <item name="android:popupBackground">@drawable/popup_background_material</item>
        <item name="android:popupElevation">@dimen/floating_window_z</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/spinner_textfield_background_material</item>
    </style>

    <!-- SwitchBar -->

    <style name="Widget.Material.SwitchBar">
        <item name="switchBarMarginStart">@dimen/switchbar_margin_start</item>
        <item name="switchBarMarginEnd">@dimen/switchbar_margin_end</item>
    </style>

    <!-- Preferences -->

    <style name="Preference" />

    <style name="Preference.Material">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="Preference.Material.Category">
        <item name="android:layout">@layout/preference_category_material</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="Preference.Material.CheckBoxPreference">
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>

</resources>
