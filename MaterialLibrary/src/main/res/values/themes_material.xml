<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Material.Light" parent="Theme.AppCompat.Light">
        <!-- Text styles -->
        <item name="android:textAppearanceButton">@style/TextAppearance.Material.Button</item>

        <!-- Button styles -->
        <item name="android:buttonStyle">@style/Widget.Material.Button</item>

        <!-- EditText and AutoCompleteTextView styles -->
        <item name="android:textCursorDrawable">@drawable/text_cursor_material</item>
        <item name="editTextBackground">@drawable/edit_text_material</item>
        <item name="android:editTextStyle">@style/Widget.Material.EditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.Material.AutoCompleteTextView</item>

        <!-- Spinner styles -->
        <item name="android:spinnerStyle">@style/Widget.Material.Spinner</item>

        <!-- RadioButton and CheckBox styles -->
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_material</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_material</item>

        <!-- ProgressBar styles -->
        <item name="android:progressBarStyleHorizontal">@style/Widget.Material.ProgressBar.Horizontal</item>

        <!-- Color palette -->
        <item name="colorButtonNormal">@color/btn_default_material_light</item>

        <!-- Preferences -->
        <item name="android:preferenceStyle">@style/Preference.Material</item>
        <item name="android:preferenceScreenStyle">@style/Preference.Material.PreferenceScreen</item>
        <item name="android:preferenceCategoryStyle">@style/Preference.Material.Category</item>
        <item name="android:checkBoxPreferenceStyle">@style/Preference.Material.CheckBoxPreference</item>
        <item name="android:ringtonePreferenceStyle">@style/Preference.Material.RingtonePreference</item>
        <item name="android:preferenceLayoutChild">@layout/preference_child_material</item>
    </style>

    <style name="Theme.Material.Light.NoActionBar" parent="Theme.Material.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
