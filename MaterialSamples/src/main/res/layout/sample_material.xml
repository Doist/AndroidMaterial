<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <io.doist.material.widget.MaterialButton
        android:id="@android:id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <io.doist.material.widget.MaterialImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/btn_default_material" />

    <io.doist.material.widget.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/material_edit_text_1" />

    <io.doist.material.widget.MaterialEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/material_edit_text_2"
        android:theme="@style/OverlayTheme" />

    <io.doist.material.widget.MaterialCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/material_check_box" />

    <io.doist.material.widget.MaterialRadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/material_radio_button" />

    <io.doist.material.widget.MaterialSwitch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/material_switch" />

</merge>
